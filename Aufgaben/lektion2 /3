import  as np

n = 100

graph = np.zeros((n, n))

for i in range(0, n):
    for j in range(i+1, n):

        value = np.random.normal(50, np.sqrt(50))

        value = max(1, value)

        graph[i, j] = value
        graph[j, i] = value

        np.fill_diagonal(graph, np.nan)

print(graph)

def Greedy(graph, start, steps):

    current = start
    path = [current]
    totalValue = 0

    for _ in range(0, steps):
        neighbours = graph[current]             
        nextNode = np.nanargmin(neighbours)     
        totalValue += graph[current, nextNode]  
        path.append(nextNode)                   
        current = nextNode                      

    return path, totalValue

path, totalValue = Greedy(graph, 0, 50)

print("Zur√ºckgelegter Pfad:")
print(path)

print("Gesamtwert:")
print(totalValue)
